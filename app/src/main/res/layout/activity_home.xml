<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/homebtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/homell"
                    android:layout_width="50dp"
                    android:layout_height="3sp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    tools:ignore="SmallSp"
                    android:orientation="horizontal" />

                <ImageView
                    android:id="@+id/homeimg"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:padding="4sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_home"
                    app:tint="@color/text_color" />

                <TextView
                    android:id="@+id/hometxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font_regular"
                    android:text="Home"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/farmerbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/storell"
                    android:layout_width="50dp"
                    android:layout_height="3sp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    tools:ignore="SmallSp"
                    android:orientation="horizontal" />

                <ImageView
                    android:id="@+id/storeimg"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:padding="4sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_store"
                    app:tint="@color/black_light" />

                <TextView
                    android:id="@+id/storetxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font_regular"
                    android:text="Store"
                    android:textAlignment="center"
                    android:textColor="@color/black_light"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cropbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/cropll"
                    android:layout_width="50dp"
                    android:layout_height="3sp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    tools:ignore="SmallSp"
                    android:orientation="horizontal" />

                <ImageView
                    android:id="@+id/cropimg"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:padding="4sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_crop"
                    app:tint="@color/black_light" />

                <TextView
                    android:id="@+id/croptxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font_regular"
                    android:text="Crop"
                    android:textAlignment="center"
                    android:textColor="@color/black_light"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profilebtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/profilell"
                    android:layout_width="50dp"
                    android:layout_height="3sp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    tools:ignore="SmallSp"
                    android:orientation="horizontal" />

                <ImageView
                    android:id="@+id/profileimg"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:padding="4sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_profile"
                    app:tint="@color/text_color" />

                <TextView
                    android:id="@+id/profiletxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font_regular"
                    android:text="Profile"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>